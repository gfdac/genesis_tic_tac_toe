{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mega Drive (Docker GDB)",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "targetArchitecture": "arm64", 
            "miDebuggerPath": "${workspaceFolder}/debug.sh",
            
            "miDebuggerArgs": "",
               
            "miDebuggerServerAddress": "host.docker.internal:6868",

            "program": "/m68k/out/rom.out",

            "cwd": "/m68k",
            "valuesFormatting": "hex",
            "stopAtEntry": false,

            "sourceFileMap": {
                "/m68k": "${workspaceFolder}"
            },

            "externalConsole": true,

            "useExtendedRemote" : true,
        }
    ]
}